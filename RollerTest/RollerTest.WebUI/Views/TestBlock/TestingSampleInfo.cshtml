@model RollerTest.WebUI.Models.SampleViewModel
@{
    ViewBag.Title = "TestingSampleInfo";
}

<h2>TestingSampleInfo</h2>

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <div class="row">
                <div class="col-lg-12">
                    <form method="post" class="form-horizontal" action="~/Index/EditProject">
                        @*@Html.HiddenFor(x => x.RollerRecordInfoID)*@
                        <div class="form-group">
                            <label class="col-sm-2 control-label">样品编号</label>
                            @foreach (var p in Model.rollersampleinfos)
                            {
                            <div class="col-sm-9">@p.SampleID</div>
                            }
                        </div>
                        <div class="hr-line-dashed"></div>
                        <div class="form-group">
                            <label><input name="status" type="radio" value="true">正常</label>
                            <label><input name="status" type="radio" value="false">异常</label>
                        </div>
                        <div class="hr-line-dashed"></div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">样品信息</label>
                           @* <div class="col-sm-9">@Html.EditorFor(x => x.RecordInfo)</div>*@
                        </div>
                        <div class="hr-line-dashed"></div>
                        <div class="col-lg-offset-5">
                            <input class="btn btn-primary" type="submit" value="提交" />
                            @*@Html.ActionLink("返回", "Index", "Sample")*@
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>



